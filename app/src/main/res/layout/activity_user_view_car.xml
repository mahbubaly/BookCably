<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fcf7f4"
    android:orientation="vertical"
    android:padding="20dp"


    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:alpha="0.3"
        android:rotation="320"
        android:src="@drawable/img_ins_bg"

        >


    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="200dp"
        android:alpha="0.3"
        android:rotation="0"
        android:src="@drawable/img_ins_bg"

        >

    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="600dp"
        android:alpha="0.3"
        android:rotation="0"
        android:src="@drawable/img_ins_bg"

        >

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="-200dp"
        android:layout_marginTop="350dp"
        android:alpha="0.3"
        android:rotation="20"
        android:src="@drawable/t1"

        >

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="550dp"
        android:alpha="0.3"
        android:rotation="20"
        android:src="@drawable/t2"

        >

    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="220dp"
        android:alpha="0.3"
        android:rotation="0"
        android:src="@drawable/t2"

        >

    </ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"



        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:background="@drawable/rounded_background"
            android:padding="40dp"
            android:rotationY="20"

            >


            <TextView
                android:id="@+id/userNameFromMain"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"


            android:background="@color/white"
            android:padding="8dp"
            android:text="Here some options"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />




        <Button
            android:id="@+id/btn_AvailableCars"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#2895C6"
            android:text="Available Cars"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_take_rent"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:backgroundTint="#009688"
            android:text="Take Rent" />


        <Button
            android:id="@+id/btn_Your_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="My Profile"
            android:textSize="16dp" />
    </LinearLayout>


</RelativeLayout>