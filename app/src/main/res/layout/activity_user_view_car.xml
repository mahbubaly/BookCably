<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/red_user_page"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".UserVIewCarActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Welcome TO BookCably!!"
        android:textColor="#CDDC39"
        android:textSize="27sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/btn_AvailableCars"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Available Cars"
        android:layout_marginTop="50dp"
        android:backgroundTint="#2895C6"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_take_rent"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:backgroundTint="#009688"
        android:text="Take Rent" />



    <Button
        android:id="@+id/btn_Your_profile"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Your Profile"
        android:textSize="16dp" />


</LinearLayout>