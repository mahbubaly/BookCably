<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_bookingview_product"
        android:layout_width="121dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_BookingBrandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9E2A2A"
            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_view_bookingModelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_viewBooking_CarNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_view_bookingHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_view_bookingCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp" />


    </LinearLayout>

</LinearLayout>
