<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf7f4"


    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:alpha="0.3"
        android:rotation="320"
        android:src="@drawable/img_ins_bg"

        >

    </ImageView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="-120dp"
        android:layout_marginTop="360dp"
        android:alpha="0.3"
        android:rotation="20"
        android:src="@drawable/t1"

        >

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="520dp"
        android:alpha="0.3"
        android:rotation="20"
        android:src="@drawable/t2"

        >

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Cancel Booking"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_CancelByModelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search by model name: "
            android:inputType="text" />

        <TextView
            android:id="@+id/text_Brandname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CAC7C7"
            android:enabled="false"
            android:hint="Brand name: "
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Text_CarNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1CFCF"
            android:enabled="false"
            android:hint="Car number "
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#00BCD4"
            android:text="Search" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btn_delete_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#9A3737"
                android:text="Confirm" />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="-150dp"
            android:layout_marginTop="130dp"
            android:alpha="0.2"
            android:rotation="0"
            android:src="@drawable/img_ins_bg"

            >

        </ImageView>
    </LinearLayout>


</RelativeLayout>
